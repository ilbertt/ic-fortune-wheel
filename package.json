{
  "engines": {
    "node": "^20",
    "pnpm": "^9",
    "npm": "please use pnpm"
  },
  "name": "ic-fortune-wheel",
  "scripts": {
    "build": "pnpm -r run build",
    "prebuild": "pnpm -r run prebuild",
    "start": "pnpm -r run start",
    "format": "prettier --write . && cargo fmt",
    "format:check": "prettier --check . && cargo fmt --check",
    "lint": "pnpm -r run lint && cargo cargo clippy --all-targets --all-features --workspace -- -Dwarnings",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.4.2"
  }
}
